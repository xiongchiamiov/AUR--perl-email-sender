pkgname=perl-email-sender
pkgver=0.100110
pkgrel=1
pkgdesc="Email::Sender - a library for sending email"
arch=('i686' 'x86_64')
url="http://search.cpan.org/perldoc?Email::Sender"
license=('PerlArtistic')
depends=('perl' 'perl-moose' 'perl-email-abstract')
options=(!emptydirs)
source=(http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Email-Sender-$pkgver.tar.gz)
md5sums=('6d3366cda79d469a87eaf4865138048d')

build() {
  cd "$srcdir/Email-Sender-$pkgver"

  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make install DESTDIR="$pkgdir/" || return 1

  # remove perllocal.pod and .packlist
  find "$pkgdir" -name perllocal.pod -delete
  find "$pkgdir" -name .packlist -delete
}

